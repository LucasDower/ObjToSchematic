{
    "compilerOptions": {
      "lib": [ "es2022", "DOM" ],
      "module": "commonjs",
      "target": "es2022",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,

      "outDir": "lib"
    },
    "include": ["src/**/*", "scripts/**/*", "index.ts"]
  }